{
  "name": "@boltzpay/protocols",
  "version": "0.1.0",
  "license": "MIT",
  "author": "leventilo (https://github.com/leventilo)",
  "description": "Protocol adapters for x402 and L402 payment protocols",
  "keywords": ["boltzpay", "x402", "l402", "payment", "protocol", "crypto", "lightning"],
  "homepage": "https://github.com/leventilo/boltzpay#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/leventilo/boltzpay.git",
    "directory": "packages/protocols"
  },
  "bugs": {
    "url": "https://github.com/leventilo/boltzpay/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "clean": "rm -rf dist",
    "check:exports": "publint --strict && attw --pack ."
  },
  "dependencies": {
    "@boltzpay/core": "workspace:*",
    "@coinbase/cdp-sdk": "^1.44.1",
    "@solana/kit": "^6.1.0",
    "@x402/core": "^2.3.0",
    "@x402/evm": "^2.3.0",
    "@x402/fetch": "^2.3.0",
    "@x402/svm": "^2.3.0",
    "async-mutex": "^0.5.0",
    "@getalby/sdk": "^7.0.0",
    "light-bolt11-decoder": "^3.2.0"
  },
  "devDependencies": {
    "@boltzpay/config": "workspace:*",
    "tsup": "^8.5.1",
    "typescript": "^5.8.3",
    "vitest": "^4.0.18"
  }
}
