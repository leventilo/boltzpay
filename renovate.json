{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeMinor",
    "group:monorepos",
    "group:recommended"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchManagers": ["pip_requirements", "pep621"],
      "groupName": "python dependencies"
    }
  ],
  "pip_requirements": {
    "fileMatch": ["integrations/.*/pyproject\\.toml$"]
  }
}
