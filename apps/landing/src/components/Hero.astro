---
import CodeBlock from "./CodeBlock.astro";

const quickstart = `<span class="text-accent-cyan">import</span> { BoltzPay } <span class="text-accent-cyan">from</span> <span class="text-accent-warm/80">"@boltzpay/sdk"</span>;
<span class="text-accent-cyan">const</span> boltz = <span class="text-accent-cyan">new</span> <span class="text-text-primary">BoltzPay</span>({ <span class="text-accent-warm/80">...</span>keys });
<span class="text-accent-cyan">const</span> res = <span class="text-accent-cyan">await</span> boltz.<span class="text-text-primary">fetch</span>(url);<span class="terminal-cursor text-accent-warm/60">|</span>`;
---

<section id="hero" class="flex min-h-screen items-center px-6 py-16 md:py-24 lg:py-32">
  <div class="mx-auto grid w-full max-w-6xl gap-10 md:grid-cols-2 md:items-start md:gap-16 md:pt-[12vh] lg:gap-20">

    <div>
      <h1 class="font-serif text-3xl font-bold leading-tight tracking-tight md:text-5xl lg:text-6xl">
        Give your agents a<br />
        <span class="text-gradient-warm font-normal italic">fetch()</span> that pays
      </h1>

      <div class="glow-separator mt-6 w-16"></div>

      <p class="mt-6 font-mono text-sm leading-relaxed text-text-secondary">
        Bitcoin Lightning + Stablecoins <span class="text-synced">|</span> Multi-protocol <span class="text-synced">|</span> Open source
      </p>

      <div class="mt-8 flex flex-col items-start gap-4 sm:flex-row sm:items-center md:mt-12">
        <button
          data-copy="npm install @boltzpay/sdk"
          class="border-animated group flex items-center gap-2 rounded border px-5 py-3 font-mono text-sm text-text-primary transition-colors hover:bg-accent-warm/5 hover:text-accent-warm"
          aria-label="Copy npm install command"
        >
          <span class="text-accent-warm/50">$</span>
          <span>npm install @boltzpay/sdk</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 16 16"
            fill="currentColor"
            class="h-3.5 w-3.5 text-text-secondary opacity-40 transition-opacity group-hover:opacity-80"
            aria-hidden="true"
          >
            <path d="M0 6.75C0 5.784.784 5 1.75 5h1.5a.75.75 0 0 1 0 1.5h-1.5a.25.25 0 0 0-.25.25v7.5c0 .138.112.25.25.25h7.5a.25.25 0 0 0 .25-.25v-1.5a.75.75 0 0 1 1.5 0v1.5A1.75 1.75 0 0 1 9.25 16h-7.5A1.75 1.75 0 0 1 0 14.25Z" />
            <path d="M5 1.75C5 .784 5.784 0 6.75 0h7.5C15.216 0 16 .784 16 1.75v7.5A1.75 1.75 0 0 1 14.25 11h-7.5A1.75 1.75 0 0 1 5 9.25Zm1.75-.25a.25.25 0 0 0-.25.25v7.5c0 .138.112.25.25.25h7.5a.25.25 0 0 0 .25-.25v-7.5a.25.25 0 0 0-.25-.25Z" />
          </svg>
        </button>

        <a
          href="https://github.com/leventilo/boltzpay"
          target="_blank"
          rel="noopener noreferrer"
          class="group relative flex items-center gap-2 px-5 py-3 text-sm text-text-secondary transition-colors hover:text-accent-warm"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4" aria-hidden="true">
            <path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.751.751 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25Z" />
          </svg>
          Star on GitHub
          <span class="absolute bottom-2 left-5 right-5 h-px origin-left scale-x-0 bg-accent-warm/50 transition-transform duration-300 ease-out group-hover:scale-x-100"></span>
        </a>
      </div>
    </div>

    <div class="animate-on-scroll md:mt-6">
      <CodeBlock code={quickstart} title="quickstart.ts" lineNumbers />
    </div>

  </div>
</section>
