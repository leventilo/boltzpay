  {
    name: "Vercel AI SDK",
    description: "Add payment tools in 2 lines",
    href: "https://docs.boltzpay.ai/integrations/vercel-ai-sdk",
    icon: "vercel",
    color: "#ffffff",
  },
  {
    name: "LangChain",
    description: "Python BaseTool, ready to use",
    href: "https://docs.boltzpay.ai/integrations/langchain",
    icon: "langchain",
    color: "#34D399",
  },
  {
    name: "CrewAI",
    description: "Native MCP and Python tools",
    href: "https://docs.boltzpay.ai/integrations/crewai",
    icon: "crewai",
    color: "#FF6B6B",
  },
  {
    name: "n8n",
    description: "No-code community node",
    href: "https://docs.boltzpay.ai/integrations/n8n",
    icon: "n8n",
    color: "#EA4B71",
  },
  {
    name: "OpenClaw",
    description: "SKILL.md for any AI agent",
