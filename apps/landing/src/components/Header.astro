<style>
  .header-pill {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    text-decoration: none;
    border-radius: 9999px;
    transition: transform 0.2s ease;
  }

  .header-pill:hover {
    transform: translateX(-50%) scale(1.03);
  }

  .header-pill-inner {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.3rem 0.85rem;
    border-radius: 9999px;
    background: var(--color-bg-card);
    font-family: var(--font-mono);
    font-size: 0.7rem;
    line-height: 1;
    color: var(--color-text-secondary);
    white-space: nowrap;
  }

</style>

<script>
  const HIDE_AFTER = 80;
  const SHOW_AFTER = 30;
  const header = document.getElementById("site-header");

  if (header) {
    let lastScrollY = 0;
    let anchorY = 0;
    let direction = 0;

    window.addEventListener("scroll", () => {
      const scrollY = window.scrollY;
      const newDir = scrollY > lastScrollY ? 1 : -1;

      if (newDir !== direction) {
        anchorY = lastScrollY;
        direction = newDir;
      }

      if (direction === 1 && scrollY - anchorY > HIDE_AFTER) {
        header.classList.add("header-hidden");
      } else if (direction === -1 && anchorY - scrollY > SHOW_AFTER) {
        header.classList.remove("header-hidden");
      }

      lastScrollY = scrollY;
    }, { passive: true });
  }
</script>
