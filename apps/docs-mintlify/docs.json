    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://boltzpay.ai"
  },
  "favicon": "/favicon.svg",
  "appearance": {
    "default": "dark"
  },
  "colors": {
    "primary": "#a3e635",
    "light": "#d9f99d",
    "dark": "#84cc16"
  },
  "font": {
    "headings": {
      "family": "Space Grotesk",
      "weight": 700
    },
    "body": {
      "family": "Space Grotesk",
      "weight": 400
    }
  },
  "icons": {
    "library": "lucide"
  },
  "codeblocks": {
    "theme": "dracula"
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude"]
  },
  "seo": {
    "indexHiddenPages": false
  },
  "metadata": {
    "og:site_name": "BoltzPay",
